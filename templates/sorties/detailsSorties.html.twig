{% embed 'sorties/_templateSorties.html.twig' %}


    {% block title %}
        detail de la sortie nÂ°{{ sortie.id}} - {{ parent() }}
    {% endblock %}

    {% block nomSortie %}<span>nom Sortie</span>{% endblock %}
    {% block dateHeureDebut %}<span>{{ sortie.dateHeureDebut | date("d/m/Y h:i") }}</span>{% endblock %}
    {% block dateLimiteInscription %}<span>{{ sortie.dateLimiteInscription | date("d/m/Y") }}</span>{% endblock %}
    {% block nombreDePlace %}<span>{{ sortie.nbInscriptionsMax }}</span>{% endblock %}
    {% block duree %}<span>{{ sortie.duree }}</span>{% endblock %}
    {% block description %}<span>{{ sortie.infosSortie }}</span>{% endblock %}
    {% block campusOrganisateur %}<span>{{ sortie.siteOrganisateur.nom }}</span>{% endblock %}
    {% block lieuSortie %}<span>{{ sortie.lieu.nom }}</span>{% endblock %}
    {% block rueSortie %}<span>{{ sortie.lieu.rue }}</span>{% endblock %}
    {% block codePostalSortie%}<span>{{ sortie.lieu.ville.codePostal }}</span>{% endblock %}
    {% block LatitudeSortie%}<span>{{ sortie.lieu.latitude }}</span>{% endblock %}
    {% block LongitudeSortie %}<span>{{ sortie.lieu.longitude }}</span>{% endblock %}

    {% block listeOuBoutton %}
        <div class="participant">
            <h3>Liste des participant inscrits</h3>
            <table>
                <thead>
                <tr>
                    <th>pseudo</th>
                    <th>nom</th>
                </tr>
                </thead>
                <tbody>
                {% for inscrit in sortie.inscrits %}
                    <tr>
                        <td>{{ inscrit.user.username }}</td>
                        <td>{{ inscrit.prenom }} {{ inscrit.nom }}</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>

        </div>
    {% endblock %}
{% endembed %}
